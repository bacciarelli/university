{#
/**
 * @file
 * Default theme implementation to present a media entity.
 *
 * Available variables:
 * - name: Name of the media.
 * - content: Media content.
 *
 * @see template_preprocess_media()
 *
 * @ingroup themeable
 */
#}
{% if content %}
  <figure{{ attributes }}>
    {{ content.field_image }}

    {% if caption %}
      <figcaption>
        {{ content.field_copyright }}
        {{ content.field_description }}
      </figcaption>
    {% endif %}
  </figure>
{% endif %}
