{#
/**
 * @file
 * Theme override to display a node.
 *
 * @see template_preprocess_node()
 */
#}
<article{{ attributes.addClass('content-wrapper') }}>

  <div class="row row-space-medium">
    <div class="inner-row">
      <h1 class="page-title">{{ label }}</h1>
    </div>
  </div>

  {{ title_suffix.contextual_links }}

  <div class="row">
    <div class="inner-row">
      <div class="l-two-one">
        <div class="l-item-first">

          {% if display_submitted %}
            <div class="meta">
              <p><span class="author">{{ 'Text'|t }}: {{ author_name }}</span>
                {% if photo_author_name %}, <span class="photo">{{ 'Photo'|t }}: {{ photo_author_name }}</span>{% endif %}
              </p>
              <p>
                <time datetime="{{ created_datetime }}">{{ created_time }}</time>
                {% if updated_time %}- {{ 'Updated' }}
                <time datetime="{{ updated_datetime }}">{{ updated_time }}</time>{% endif %}
              </p>
              {{ metadata }}
            </div>
          {% endif %}

          <div{{ content_attributes.addClass('copy') }}>
            {{ content }}
          </div>
        </div>
        <div class="l-item-second">
          <div class="list-social">
            <p class="title">Del på</p>
            <ul>
              <li class="item">
                <a href="" class="social-link facebook" title="Del på facebook"></a>
              </li>
              <li class="item">
                <a href="" class="social-link twitter" title="Del på twitter"></a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>

</article>
