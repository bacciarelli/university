{#
/**
 * @file
 * Theme override to display a node.
 *
 * @see template_preprocess_node()
 */
#}
<article{{ attributes.addClass('content-teaser', 'article-2') }}>
  <a href="{{ url }}" rel="bookmark" class="link-block">
    {% if content.field_hero_media|render %}
      <div class="image">
          {{ content.field_hero_media }}
      </div>
    {% endif %}
    <h1 class="title">{{ label }}</h1>

    <time datetime="{{ created_datetime }}" class="published">{{ created_time }}</time>

    {% if content.field_teaser_text %}
      <div class="desc">
        {{ content.field_teaser_text }}
      </div>
    {% endif %}
  </a>
</article>
