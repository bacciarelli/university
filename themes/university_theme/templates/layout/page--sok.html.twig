{#
/**
 * @file
 * Theme override to display a single page.
 *
 * @see template_preprocess_page()
 * @see html.html.twig
 */
#}
<header role="banner" class="page-header" tabindex="-1" id="top">
  <div class="inner-row">
    <div class="header-top">
      {{ page.header }}
      <a class="nav-toggle nav xlarge-down" data-btn="nav" href="#nav" title="{{ 'Open menu'|t }}"></a>
    </div>
    <nav class="page-navigation" role="navigation">
      <div class="nav-group" tabindex="-1" id="nav">
        {{ page.primary_menu }}
        {{ page.secondary_menu }}
        <a href="#top" class="nav-toggle nav-close xlarge-down" title="{{ 'Close menu'|t }}" data-btn="nav-close"></a>
      </div>
    </nav>
  </div>
</header>

{{ page.breadcrumb }}

{{ page.highlighted }}

{{ page.help }}

<main role="main" class="page-body">
  <a id="main-content" tabindex="-1"></a>
  <article class="content-wrapper">
    {{ page.featured_top }}

    <div class="row overflow-hidden">
      <div class="inner-row">
        <div class="l-one-one-and-half-one-invert">
          {% if page.sidebar_first %}
            <div class="l-item-first sidebar-offset-bg">
              <div class="filter-search grid-three">
                {{ page.sidebar_first.summary }}
                <div class="accordion">
                  {{ page.sidebar_first|without('summary') }}
                </div>
              </div>
            </div>
          {% endif %}

          <div class="l-item-second">
            {{ page.content }}
          </div>
        </div>
      </div>
    </div>
  </article>

  {% if page.sidebar_second %}
    <footer class="content-footer">
      {{ page.sidebar_second }}
    </footer>
  {% endif %}
</main>

<footer class="page-footer" role="contentinfo">
  <div class="inner-row">
    {% if page.footer %}
      <div class="grid-three">
        {{ page.footer }}
      </div>
    {% endif %}

    {{ page.bottom }}

    <div class="center">
      <a href="#" class="back-to-top btn">{{ 'Back to top'|t }}</a>
    </div>
  </div>
</footer>
